<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="clase07.View.ExplicitDemo">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="labelRedStyle" TargetType="Label">
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
                <Setter Property="FontSize" Value="Large"/>
                <Setter Property="TextColor" Value="Red"/>
            </Style>
            <Style x:Key="labelGreenstyle" TargetType="Label">
                <Setter Property="TextColor" Value="Green"/>
            </Style>
            <Style x:Key="labelBlueStyle" TargetType="Label">
                <Setter Property="TextColor" Value="Blue"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout Padding="0,20,0,0">
            <Label Text="Red Style" Style="{StaticResource labelRedStyle}"/>
            <Label Text="Green Style" Style="{StaticResource labelGreenstyle}"/>
            <Label Text="Blue Style" Style="{StaticResource labelBlueStyle}" TextColor="Teal"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>